<div class="row">
  <div class="col-sm-8 col-md-8">
    <div class="block ">
      <div class="block-header bg-gray-lighter">
        <h3 class="block-title"><%=t.booking_renting_summary.received_reservations_graph_title%></h3>
      </div>
      <div class="block-content">
        <canvas id="booking_graphic" width="640" height="550"></canvas>
      </div>
    </div>
  </div>
  <div class="col-sm-4 col-md-4">
    <div class="block ">
      <div class="block-header bg-gray-lighter">
        <h3 class="block-title"><%=t.booking_renting_summary.received_reservations_table_title%></h3>
      </div>
      <div class="block-content">
        <div id="booking_data">

        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/template" id="booking_data_table">
 <div>
    <table class="table table-striped">
       <thead>
         <tr>
           <th class="table-header-title text-center" scope="col" style="width:20%"><%=t.booking_console.period%></th>
           <th class="table-header-title text-right" scope="col" style="width:40%"><%=t.booking_console.requested%></th>
           <th class="table-header-title text-right" scope="col" style="width:40%"><%=t.booking_console.confirmed%></th>
         </tr>
       </thead>
       <tbody>
         <%% var total_requests = 0; %>
         <%% var total_confirmed = 0; %>  
         <%% for (item in data) { %>          
         <tr>
           <td class=""><%%=item%></td>
           <td class="text-right"><%%=data[item].requests%></td>
           <td class="text-right"><%%=data[item].confirmed%></td>
           <%% total_requests += data[item].requests; %>
           <%% total_confirmed += data[item].confirmed; %>
         </tr>
         <%% } %>
         <tr class="success">
           <td class=""><b>TOTAL</b></td>
           <td class="text-right"><b><%%=total_requests%></b></td>
           <td class="text-right"><b><%%=total_confirmed%></b></td>
         </tr>  
       </tbody>
    </table>
</script>